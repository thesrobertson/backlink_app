<div class="container mt-5" style="max-width: 800px;">
	<% if notice.present? %><div class="alert alert-success" style="margin-top:20px;"><%= notice %></div><% end %>
	 <% if @backlink.errors.any? %>
        <div class="alert alert-danger" style="border-radius: 10px;">
          <h5><strong>There were errors with your submission:</strong></h5>
          <ul>
            <% @backlink.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <div class="card shadow-sm" style="border-radius: 20px;">
    <div class="card-header text-white" style="background-color: #1A1364; border-top-left-radius: 20px; border-top-right-radius: 20px;">
      <h4 class="mb-0">Create a New Backlink</h4>
    </div>
    <div class="card-body">
      <%= form_with(model: @backlink, url: backlinks_path, method: :post, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>

        <div class="mb-3">
          <%= form.label :site, class: 'form-label' do %>
            <strong>Site URL</strong>
          <% end %>
          <%= form.text_field :site, class: 'form-control', placeholder: 'Enter the site URL', required: true, autofocus: true %>
        </div>

        <div class="mb-3">
          <%= form.label :country, class: 'form-label' do %>
            <strong>Country</strong>
          <% end %>
          <%= form.select :country, options_for_select(@countries, prompt: 'Select a country'), {}, class: 'form-control', required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :category, class: 'form-label' do %>
            <strong>Category</strong>
          <% end %>
          <%= form.select :category, options_for_select(@categories, prompt: 'Select a category'), {}, class: 'form-control', required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :price, class: 'form-label' do %>
            <strong>Price (â‚¬)</strong>
          <% end %>
          <%= form.number_field :price, class: 'form-control', placeholder: 'Enter the price', step: '0.01', min: '0', required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :domain_rank, class: 'form-label' do %>
            <strong>Domain Rank</strong>
          <% end %>
          <%= form.number_field :domain_rank, class: 'form-control', placeholder: 'Enter the domain rank', step: '1', min: '0', required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :added_on, class: 'form-label' do %>
            <strong>Added On</strong>
          <% end %>
          <%= form.date_field :added_on, class: 'form-control', value: Date.today, required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :duration, class: 'form-label' do %>
            <strong>Duration</strong>
          <% end %>
          <%= form.text_field :duration, class: 'form-control', placeholder: 'Enter the duration (e.g., 6 months)', required: true %>
        </div>

        <!-- Toggles Row -->
        <div class="row mb-3" style="padding-left:20px;">
          <div class="col-md-4">
            <div class="form-check form-switch">
              <%= form.check_box :article_writing, class: 'form-check-input', id: 'articleWritingSwitch' %>
              <%= form.label :article_writing, class: 'form-check-label', for: 'articleWritingSwitch' do %>
                <strong>Article Writing Included</strong>
              <% end %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-check form-switch">
              <%= form.check_box :cs_possible, class: 'form-check-input', id: 'csPossibleSwitch' %>
              <%= form.label :cs_possible, class: 'form-check-label', for: 'csPossibleSwitch' do %>
                <strong>C/S Possible</strong>
              <% end %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-check form-switch">
              <%= form.check_box :special_price, class: 'form-check-input', id: 'specialPriceSwitch' %>
              <%= form.label :special_price, class: 'form-check-label', for: 'specialPriceSwitch' do %>
                <strong>Special Price</strong>
              <% end %>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :comments, class: 'form-label' do %>
            <strong>Additional Comments</strong>
          <% end %>
          <%= form.text_area :comments, class: 'form-control', placeholder: 'Enter any additional comments...', rows: 3 %>
        </div>

        <div class="text-center">
          <%= form.submit 'Create Backlink', class: 'btn btn-primary', style: 'border-radius: 20px; padding: 10px 20px;' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

