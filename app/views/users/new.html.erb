<div class="login-body">
  <div class="login-page">
    <div class="content-wrapper">
      <%= form_with url: login_path, class: "loginBox", method: :post do %> <!-- Updated URL to login path -->
        <%= image_tag 'linkzenit.png', class: "login-logo" %>

        <h3>Enter your Email</h3>
        <div class="form-group">
          <%= email_field_tag :username, nil, class: 'form-control inputBox', id: "uname" %> <!-- Changed to :username to match SessionsController -->
          <%= hidden_field_tag :password, 'password' %> <!-- Correct usage of hidden_field_tag -->
        </div>
        <%= submit_tag 'Submit', class: 'btn btn-primary' %>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger mt-3">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
