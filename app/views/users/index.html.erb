<div class="container mt-5">
  <div class="card shadow-sm" style="border-radius: 20px;">
    <div class="card-header text-white" style="background-color: #1A1364; border-top-left-radius: 20px; border-top-right-radius: 20px;">
      <h4 class="mb-0">Manage Whitelisted Users</h4>
    </div>
    <div class="card-body">
      <!-- Add New User Form -->
      <div class="mb-4">
        <h5><strong>Add New User</strong></h5>
        <%= form_with(model: User.new, url: users_path, method: :post, local: true, html: { class: 'row g-3 align-items-end' }) do |form| %>
          <div class="col-md-9">
            <%= form.text_field :email, class: 'form-control', placeholder: 'Enter email to whitelist', required: true %>
          </div>
          <div class="col-md-3 text-end">
            <%= form.submit 'Add to Whitelist', class: 'btn btn-primary w-100', style: 'border-radius: 10px;' %>
          </div>
        <% end %>
      </div>

      <!-- Users Table -->
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="table-dark" style="background-color: #343a40;">
            <tr>
              <th>Email</th>
              <th class="text-center" style="width: 180px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td class="d-flex justify-content-around">
                  <!-- Edit Button - triggers modal -->
                  <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editUserModal<%= user.id %>" style="border-radius: 10px;">Edit</button>

                  <!-- Remove Button -->
                  <%= button_to 'Remove', user_path(user), method: :delete, class: 'btn btn-sm btn-danger', style: 'border-radius: 10px;', data: { confirm: 'Are you sure you want to remove this email from the whitelist?' } %>
                </td>
              </tr>

              <!-- Edit User Modal -->
              <div class="modal fade" id="editUserModal<%= user.id %>" tabindex="-1" aria-labelledby="editUserModalLabel<%= user.id %>" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="editUserModalLabel<%= user.id %>">Edit User Email</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <%= form_with(model: user, url: user_path(user), method: :patch, local: true) do |form| %>
                        <div class="mb-3">
                          <%= form.label :email, class: 'form-label' do %>
                            <strong>Email</strong>
                          <% end %>
                          <%= form.text_field :email, class: 'form-control', value: user.email, required: true %>
                        </div>
                        <div class="text-end">
                          <%= form.submit 'Save Changes', class: 'btn btn-success', style: 'border-radius: 10px;' %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Styles for enhanced UI -->
<style>
  .modal-content {
    border-radius: 15px;
  }
  .btn-close {
    border: none;
    background: transparent;
  }
</style>
